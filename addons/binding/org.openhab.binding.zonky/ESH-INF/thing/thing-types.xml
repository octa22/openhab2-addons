<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zonky"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Account Thing Type -->
	<thing-type id="account">
		<label>Zonky Account</label>
		<description>Account provided by Zonky binding</description>

		<channel-groups>
			<channel-group id="wallet" typeId="wallet" />
			<channel-group id="weeklyStats" typeId="weeklyStats" />
			<channel-group id="statistics" typeId="statistics" />
			<channel-group id="currentOverview" typeId="currentOverview" />
			<channel-group id="overallOverview" typeId="overallOverview" />
		</channel-groups>

		<config-description>
			<parameter name="username" type="text" required="true">
				<label>User name</label>
				<description>Your Zonky account user name (email).</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Your Zonky account password.</description>
			</parameter>
			<parameter name="refresh" type="integer">
				<label>Refresh interval</label>
				<description>Data refresh interval in milliseconds.</description>
				<default>60000</default>
			</parameter>
		</config-description>

	</thing-type>

	<channel-group-type id="wallet">
		<label>Wallet</label>
		<channels>
			<channel id="balance" typeId="balance" />
			<channel id="availableBalance" typeId="availableBalance" />
			<channel id="blockedBalance" typeId="blockedBalance" />
			<channel id="creditSum" typeId="creditSum" />
			<channel id="debitSum" typeId="debitSum" />
		</channels>
	</channel-group-type>

	<channel-group-type id="weeklyStats">
		<label>Weekly statistics</label>
		<channels>
			<channel id="newInvestments" typeId="newInvestments" />
			<channel id="newInvestmentsAmount" typeId="newInvestmentsAmount" />
			<channel id="paidInstalments" typeId="paidInstalments" />
			<channel id="paidInstalmentsAmount" typeId="paidInstalmentsAmount" />
			<channel id="soldInvestments" typeId="soldInvestments" />
			<channel id="soldInvestmentsAmount" typeId="soldInvestmentsAmount" />
			<channel id="boughtInvestments" typeId="boughtInvestments" />
			<channel id="boughtInvestmentsAmount" typeId="boughtInvestmentsAmount" />
		</channels>
	</channel-group-type>

	<channel-group-type id="statistics">
		<label>Statistics</label>
		<channels>
			<channel id="currentProfitability" typeId="currentProfitability" />
			<channel id="expectedProfitability" typeId="expectedProfitability" />
		</channels>
	</channel-group-type>

	<channel-group-type id="currentOverview">
		<label>Current overview</label>
		<channels>
			<channel id="interestLeft" typeId="interestLeftCO" />
			<channel id="interestLeftDue" typeId="interestLeftDueCO" />
			<channel id="interestLeftToPay" typeId="interestLeftToPayCO" />
			<channel id="interestPaid" typeId="interestPaidCO" />
			<channel id="penaltyPaid" typeId="penaltyPaidCO" />
			<channel id="interestPlanned" typeId="interestPlannedCO" />
			<channel id="investmentCount" typeId="investmentCountCO" />
			<channel id="principalLeft" typeId="principalLeftCO" />
			<channel id="principalLeftDue" typeId="principalLeftDueCO" />
			<channel id="principalLeftToPay" typeId="principalLeftToPayCO" />
			<channel id="principalPaid" typeId="principalPaidCO" />
			<channel id="totalInvestment" typeId="totalInvestmentCO" />
		</channels>
	</channel-group-type>

	<channel-group-type id="overallOverview">
		<label>Overall overview</label>
		<channels>
			<channel id="feesAmount" typeId="feesAmountOO" />
			<channel id="feesDiscount" typeId="feesDiscountOO" />
			<channel id="interestPaid" typeId="interestPaidOO" />
			<channel id="investmentCount" typeId="investmentCountOO" />
			<channel id="netIncome" typeId="netIncomeOO" />
			<channel id="principalLost" typeId="principalLostOO" />
			<channel id="principalPaid" typeId="principalPaidOO" />
			<channel id="penaltyPaid" typeId="penaltyPaidOO" />
			<channel id="totalInvestment" typeId="totalInvestmentOO" />
		</channels>
	</channel-group-type>


